@using Microsoft.AspNetCore.Http

@{
    Layout = "_layout";
    var userSession = Context.Session.GetString("USER_INFO");
    var user = userSession != null ? Newtonsoft.Json.JsonConvert.DeserializeObject<inventory_re.Model.Users>(userSession) : null;
}

<div class="row mt-sm-4">
    <div class="col-12 col-md-4">
        <div class="card author-box">
            <div class="card-body">
                <div class="author-box-center">
                    <img alt="image" src="assets/img/users/user-1.png" class="rounded-circle author-box-picture">
                    <div class="clearfix"></div>
                    <div class="username">
                        <label>@(user.Fullname ?? "User Name")</label>
                    </div>
                    <div class="usergroup">@("Web Developer")</div>
                </div>
                <div class="text-center">
                    <div class="author-box-description">
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit...</p>
                    </div>
                    <div class="mb-2 mt-3">
                        <div class="text-small font-weight-bold">Follow Hasan On</div>
                    </div>
                    <!-- Social Media Links -->
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-8">
        <div class="card">
            <div class="padding-20">
                <ul class="nav nav-tabs" id="myTab2" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab2" data-toggle="tab" href="#about" role="tab" aria-selected="true">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab2" data-toggle="tab" href="#settings" role="tab" aria-selected="false">Setting</a>
                    </li>
                </ul>
                <div class="tab-content tab-bordered" id="myTab3Content">
                    <div class="tab-pane fade show active" id="about" role="tabpanel" aria-labelledby="home-tab2">
                        <div class="row">
                            <div class="col-md-3 col-6 b-r">
                                <strong>Full Name</strong>
                                <p class="text-muted">@user?.Fullname</p>
                            </div>
                            <div class="col-md-3 col-6 b-r">
                                <strong>Mobile</strong>
                                <p class="text-muted">@user.ContactNo</p>
                            </div>
                            <div class="col-md-3 col-6 b-r">
                                <strong>Email</strong>
                                <p class="text-muted">@user?.Email</p>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
